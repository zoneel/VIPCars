
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5+z7ZvN+irJdjURqJQF/oaVkukk5foGkW0j4y6R3" crossorigin="anonymous">
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment WebHostEnvironment
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Assuming a shared layout exists for the website
}

<div class="jumbotron">
    <h1>Welcome to VIP Car Rentals!</h1>
    <p>Rent luxury cars for your special occasions.</p>
    <p>
        @if (User.Identity.IsAuthenticated)
        {
            <a class="btn btn-primary btn-lg" href="@Url.Action("Index", "Cars")">View Cars</a>
        }
        else
        {
            <a class="btn btn-primary btn-lg" href="@Url.Action("Login", "Account")">Login to Rent</a>
        }
    </p>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h2>About Us</h2>
            <p>Learn more about our VIP car rental services.</p>
            <p><a class="btn btn-secondary" href="@Url.Action("AboutUs", "Home")">Read More &raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h2>Our Cars</h2>
            <p>Explore our fleet of luxury cars available for rent.</p>
            <p><a class="btn btn-secondary" href="@Url.Action("Index", "Cars")">View Cars &raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h2>Contact</h2>
            <p>Get in touch with us for any inquiries or assistance.</p>
            <p><a class="btn btn-secondary" href="@Url.Action("Contact", "Home")">Contact &raquo;</a></p>
        </div>
    </div>
    @* This is photo carousel *@
    <div class="container mt-4">
        <div id="carouselExampleControls" class="carousel slide d-flex align-items-center justify-content-center" data-bs-ride="carousel">
            <div class="carousel-inner">
                @{
                    var wwwrootPath = WebHostEnvironment.WebRootPath;
                    var imagePath = "/mainpictures/";
                    var images = System.IO.Directory.EnumerateFiles($"{wwwrootPath}{imagePath}", "*.*", System.IO.SearchOption.TopDirectoryOnly)
                        .Where(s => s.EndsWith(".jpg") || s.EndsWith(".png") || s.EndsWith(".jpeg"))
                        .Select(s => imagePath + System.IO.Path.GetFileName(s))
                        .ToList();

                    for (var i = 0; i < images.Count; i++)
                    {
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <img src="@images[i]" class="d-block mw-100" style="max-width: 150px; max-height: 250px;" alt="Image @(i + 1)">
                        </div>
                    }
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <hr>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
